<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.andreaskluth.v8</groupId>
  <artifactId>v8</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>net.andreaskluth.v8.Application</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <version>0.26.0</version>
        <configuration>
          <images>
            <image>
              <name>hello-j2v8</name>
              <alias>dockerfile</alias>
              <build>
                <dockerFileDir>${project.basedir}/docker</dockerFileDir>
                <filter>@</filter>
                <assembly>
                  <descriptorRef>artifact</descriptorRef>
                </assembly>
              </build>
            </image>
          </images>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>mac</id>
      <properties>
        <j2v8.version>4.6.0</j2v8.version>
        <j2v8.artifact.id>j2v8_macosx_x86_64</j2v8.artifact.id>
      </properties>
    </profile>
    <profile>
      <id>unix</id>
      <properties>
        <j2v8.version>4.8.0</j2v8.version>
        <j2v8.artifact.id>j2v8_linux_x86_64</j2v8.artifact.id>
      </properties>
    </profile>
  </profiles>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>
