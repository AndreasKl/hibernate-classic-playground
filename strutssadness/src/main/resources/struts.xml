<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    
    <constant name="struts.action.extension" value="," />
    <constant name="struts.devMode" value="true" />
    
    <!--
    <constant name="struts.mapper.class" value="rest" />
    <constant name="struts.convention.action.suffix" value="Resource" />
    <constant name="struts.convention.action.mapAllMatches" value="true" />
    <constant name="struts.convention.default.parent.package" value="rest-default" />
    <constant name="struts.convention.package.locators" value="resources" />
     -->
    
    <package name="net.andreaskluth.strutssadness" extends="struts-default">
        <interceptors>
            <interceptor name="addHeaderDataInterceptor" class="net.andreaskluth.strutssadness.interceptor.AddHeaderDataInterceptor" />
        </interceptors>
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="composition" class="net.andreaskluth.strutssadness.actions.CompositionAction" method="execute">
            <result name="success">/composition.jsp</result>
            <interceptor-ref name="params" />
            <interceptor-ref name="timer" />
            <interceptor-ref name="addHeaderDataInterceptor" />
        </action>
    </package>
    
</struts>